<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>arquivo</param-name>
        <param-value>/C:\\Users\\Syane\\Documents\\NetBeansProjects\\MiniForumS2\\web\\WEB-INF\\mensagensemail.txt</param-value>
    </context-param>
    <context-param>
        <param-name>cont</param-name>
        <param-value>0</param-value>
    </context-param>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>login.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ForumServelet</servlet-name>
        <servlet-class>Servelet.ForumServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MensagensServlet</servlet-name>
        <servlet-class>Servelet.MensagensServlet</servlet-class>
        <init-param>
            <param-name>backgroundcolor</param-name>
            <param-value>#B0B1C7</param-value>
        </init-param>
        <init-param>
            <param-name>h1color</param-name>
            <param-value>#B33D5A</param-value>
        </init-param>
        <init-param>
            <param-name>h3color</param-name>
            <param-value>#E85A90</param-value>
        </init-param>
        <init-param>
            <param-name>h2color</param-name>
            <param-value>#144199</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForumServelet</servlet-name>
        <url-pattern>/forum/gravar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MensagensServlet</servlet-name>
        <url-pattern>/forum/listar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
